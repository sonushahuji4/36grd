<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="@dimen/_5sdp">



            <TextView
                android:id="@+id/all_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/feedbacksend"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:src="@drawable/finalfeed"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_5sdp"
                android:text=""/>


            <TextView
                android:id="@+id/all_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/all_title"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="Department Description"
                android:textSize="@dimen/_12sdp"
                android:textStyle="italic"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/hinttextcolor"/>


            <TextView
                android:id="@+id/all_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/all_description"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Link"

                android:autoLink="web"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/linkcolor"
                android:textSize="@dimen/_10sdp" />


            <!--<Button
                android:id="@+id/instanceview"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/all_link"
                android:layout_marginEnd="12dp"
                android:background="@color/background_color"
                android:fontFamily="serif-monospace"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Instant View"/>
-->
            <Button
                android:id="@+id/instanceview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/date"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="Instant View"
                android:background="@drawable/btnldesign"
                android:textColor="@color/textwhite"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/all_link"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="date"
                android:textSize="@dimen/_10sdp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="date"
                android:textSize="@dimen/_10sdp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/white"/>
           <!-- <Button
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:background="@color/colorPrimary"
                android:textColor="@color/textColorPrimary"
                android:text="Apply Now"/>-->
            <Button
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/btn"
                android:textColor="@color/textwhite"
                android:text="Apply Now"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>