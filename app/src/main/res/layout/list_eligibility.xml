<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/strokedesign">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgdesign"
            android:padding="@dimen/_10sdp">



            <TextView
                android:id="@+id/elg_title"
                android:textSize="@dimen/_14sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textColor="@color/textwhite"/>
            <TextView
                android:id="@+id/elg_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="Department Description"
                android:textStyle="italic"
                android:layout_below="@id/elg_title"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_gravity="center"
                android:textColor="@color/hinttextcolor"/>


            <TextView
                android:id="@+id/elg_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/elg_description"
                android:hint="link"
                android:autoLink="web"
                android:textSize="@dimen/_8sdp"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/textwhite"
                android:textColorHint="@color/linkcolor" />


            <TextView
                android:id="@+id/elg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/elg_link"
                android:text="Date"
                android:layout_margin="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/textwhite"/>

            <TextView
                android:id="@+id/link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/elg_date"
                android:hint="link"
                android:autoLink="web"
                android:textSize="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/textwhite"
                android:textColorHint="@color/linkcolor" />
            <Button
                android:id="@+id/elg_instance_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="INSTANT VIEW"
                android:hint="INSTANT VIEW"
                android:textSize="@dimen/_8sdp"
                android:textColorHint="@color/textwhite"
                android:background="@drawable/btnldesign"
                android:textColor="@color/textwhite"
                android:layout_below="@+id/elg_date"/>

            <Button
                android:id="@+id/elg_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/elg_date"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/btn"
                android:textColor="@color/textwhite"
                android:text="Apply Now"/>
            <ImageView
                android:id="@+id/feedbacksend"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:src="@drawable/finalfeed"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_5sdp"
                android:text=""/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>